{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Gems", // Descriptive name for the task
            "type": "shell",
            "command": "bundle install", // Command to run
            "problemMatcher": [],  // Prevent warnings about problem matchers
            "group": "build", // Optionally group tasks
            "options": {
                "cwd": "${workspaceFolder}" // Working directory
            }
        },
        {
            "label": "Build Jekyll Site",
            "type": "shell",
            "command": "bundle exec jekyll build",
            "problemMatcher": [],
            "group": "build",
            "dependsOn": "Install Gems", // Run "Install Gems" before this task
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Serve Jekyll Site",
            "type": "shell",
            "command": "bundle exec jekyll serve",
            "problemMatcher": [],
            "group": "build",
            "dependsOn": "Build Jekyll Site", // Run "Build Jekyll Site" before this task
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true // Keep the server running in the background
        }
    ]
}