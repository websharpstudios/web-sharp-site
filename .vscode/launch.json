{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jekyll",
            "preLaunchTask": "Serve Jekyll Site" ,
            "type": "chrome", // Or "firefox"
            "request": "launch",
            "url": "http://127.0.0.1:4000", // Your Jekyll site's URL
            "webRoot": "${workspaceFolder}",
            "sourceMapPathOverrides": {
                "webpack:///*/*": "${webRoot}/*/*"
            }
        }
    ]
}